{
    "name": "picobel-root",
    "version": "3.1.5",
    "description": "Convert html audio tags into styleable markup.",
    "private": true,
    "type": "module",
    "scripts": {
        "test": "pnpm --filter=picobel test",
        "build": "pnpm --filter=picobel build",
        "build:dev": "pnpm --filter=picobel build --mode=development",
        "check": "pnpm --filter=picobel check",
        "demo:build:dev": "pnpm --filter=demo build --mode=development",
        "demo:build": "pnpm --filter=demo build",
        "demo:serve": "pnpm --filter=demo serve"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tomhazledine/picobel.git"
    },
    "author": "Tom Hazledine <tom@tomhazledine.com> (https://tomhazledine.com)",
